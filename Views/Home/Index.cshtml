@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Namų puslapis";

}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no" />
    <title>@ViewData["Title"] - Smart Table</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark" style="flex-direction:column;">
        <a class="navbar-brand" href="#">SmartTable</a>
        <div id="navbarNavAltMarkup">
            <div class="navbar-nav">
                <a class="nav-item nav-link active" asp-area="" asp-action="ConnectAsWaiter">Padavėjas</a>
                <a class="nav-item nav-link active" asp-area="" asp-action="ConnectAsAdmin">Administratorius</a>
            </div>
        </div>
    </nav>
    <div class="container" style="padding-top:5%;">
        @if (TempData["ErrorMessage"] != null)
        {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        }
        <div class="row">
            <div class="col-sm" style="text-align:-webkit-center;">
                <a class="nav-item nav-link" asp-controller="Home" asp-action="TakeTable" asp-route-tableId="1">
                    Užimti pirmą stalą
                    <img class="img-fluid img-thumbnail" src="~/pictures/stalas-1.jpg" alt="stalas" style="width:200px; display:block;" />
                </a>
                <a class="nav-item nav-link" asp-controller="Home" asp-action="TakeTable" asp-route-tableId="1">
                    <img class="img-fluid img-thumbnail" src="~/pictures/stalo-QR-kodas-1.png" alt="stalas" style="width:200px;" />
                </a>
            </div>
            <div class="col-sm" style="text-align:-webkit-center;">
                <a class="nav-item nav-link" asp-controller="Home" asp-action="TakeTable" asp-route-tableId="2">
                    Užimti antrą stalą
                    <img class="img-fluid img-thumbnail" src="~/pictures/stalas-2.jpg" alt="stalas" style="width:200px; display:block;" />
                </a>
                <a class="nav-item nav-link" asp-controller="Home" asp-action="TakeTable" asp-route-tableId="2">
                    <img class="img-fluid img-thumbnail" src="~/pictures/stalo-QR-kodas-2.png" alt="stalas" style="width:200px" />
                </a>
            </div>
            <div class="col-sm" style="text-align:-webkit-center;">
                <a class="nav-item nav-link" asp-controller="Home" asp-action="TakeTable" asp-route-tableId="3">
                    Užimti trečią stalą
                    <img class="img-fluid img-thumbnail" src="~/pictures/stalas-3.jpg" alt="stalas" style="width:200px; display:block;" />
                </a>
                <a class="nav-item nav-link" asp-controller="Home" asp-action="TakeTable" asp-route-tableId="3">
                    <img class="img-fluid img-thumbnail" src="~/pictures/stalo-QR-kodas-3.png" alt="stalas" style="width:200px" />
                </a>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>