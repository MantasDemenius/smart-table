                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Smart Table</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                        <div class="navbar-nav">
                            <a class="nav-item nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home <span class="sr-only">(current)</span></a>
                            <a class="nav-item nav-link" href="#">Stalų valdymas</a>
                            <a class="nav-item nav-link" href="#">Užsakymų valdymas</a>
                            <a class="nav-item nav-link" href="#">Meniu valdymas</a>
                            <a class="nav-item nav-link" href="#">Patiekalų valdymas</a>
                            <a class="nav-item nav-link" asp-area="" asp-controller="RegisteredUsers" asp-action="OpenManageRegisteredUsersView">Valdyti padavėjus</a>
                            <a class="nav-item nav-link" href="#">Atsijungti</a>
                        </div>
                    </div>
                </nav>
            </div>
        </nav>*@
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - Smart Table
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
