@model IEnumerable<smart_table.Models.Orders>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Temperature)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Submitted)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Served)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FkBillsNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FkCustomerTablesNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FkRegisteredUsersNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Temperature)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Submitted)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Served)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FkBillsNavigation.Evaluation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FkCustomerTablesNavigation.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FkRegisteredUsersNavigation.Email)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
