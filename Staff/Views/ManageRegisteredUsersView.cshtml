@model IEnumerable<smart_table.Models.RegisteredUsers>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Padavėjų valdymas";
}

<h3>Naudotojų valdymas</h3>
@if (ViewData["message"] != null && ViewData["message"] != "")
{
    <div class="alert alert-info" role="alert">
        @ViewData["message"]
    </div>
}
<p>

    <a style="float:right;" asp-action="OpenCreateRegisteredUserView">+ Naujas padavėjas</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsBlocked)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Surname)
                </td>
                <td>
                    @if (item.IsBlocked)
                    {
                        <span>Blokuotas</span>
                    }
                    else
                    {
                        <span>Aktyvus</span>
                    }

                </td>

                <td>
                    <div class="btn-group btn-group-sm" role="group" aria-label="Managing buttons">
                        <a class="btn btn-secondary" asp-action="OpenEditRegisteredUserView" asp-route-id="@item.Id">Redaguoti</a>
                        <a class="btn btn-secondary" asp-action="OpenRegisteredUserView" asp-route-id="@item.Id">Peržiūrėti</a>
                        <a class="btn btn-secondary" asp-action="DeleteRegisteredUser" asp-route-id="@item.Id">Ištrinti</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

