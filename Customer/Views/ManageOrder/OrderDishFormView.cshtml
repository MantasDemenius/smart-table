@model smart_table.Models.OrderDishes
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Įtraukti patiekalą į užsakymą";

}

<h1>Įtraukti patiekalą į užsakymą</h1>
<h3>@ViewData["message"]</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="addDish">
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" value="1"/>
            </div>
            <div class="form-group">
                <label asp-for="Comment" class="control-label"></label>
                <textarea rows=3 asp-for="Comment" class="form-control"></textarea>
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Įtraukti" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="goBack">Grįžti atgal</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
